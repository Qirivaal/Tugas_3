<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    tools:context=".SignIn">

    <TextView
        android:id="@+id/textReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="38dp"
        android:fontFamily="@font/oxygen_bold"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/imageButton2"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textSignto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset code was sent to your email. Please enter the code and create new password"
        android:textSize="17dp"
        android:fontFamily="@font/oxygen_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textReset"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/textResetCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset code"
        android:textSize="22dp"
        android:fontFamily="@font/oxygen_bold"
        app:layout_constraintTop_toBottomOf="@id/textSignto"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editTextResetCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:inputType="textEmailAddress"
        android:hint="Enter your number"
        android:fontFamily="@font/oxygen_bold"
        app:layout_constraintTop_toBottomOf="@id/textResetCode"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textSize="22dp"
        android:fontFamily="@font/oxygen_bold"
        app:layout_constraintTop_toBottomOf="@id/editTextResetCode"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:inputType="textPassword"
        android:hint="Enter your password"
        android:fontFamily="@font/oxygen_bold"
        app:layout_constraintTop_toBottomOf="@id/textNewPassword"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textSize="22dp"
        android:fontFamily="@font/oxygen_bold"
        app:layout_constraintTop_toBottomOf="@id/editTextNewPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:inputType="textPassword"
        android:hint="Enter your password"
        android:fontFamily="@font/oxygen_bold"
        app:layout_constraintTop_toBottomOf="@id/textConfirmPassword"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/oxygen_bold"
        android:text="Change Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editConfirmPassword"
        />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/white"
        app:srcCompat="?attr/actionModeCloseDrawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>